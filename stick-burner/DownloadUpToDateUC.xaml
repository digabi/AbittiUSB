<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    x:Class="Ytl.AbittiUsb.DownloadUpToDateUC"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    lex:LocalizeDictionary.DesignCulture="sv-SE"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    mc:Ignorable="d" d:DesignWidth="519" d:DesignHeight="465">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="HeaderTextBlock" Style="{StaticResource Header}" />
        <TextBlock x:Name="ImageFileInfo" Text="" Style="{StaticResource PlainText}" HorizontalAlignment="Left"
                   Margin="30,35,20,0" TextWrapping="Wrap" VerticalAlignment="Top" />
        <StackPanel Orientation="Horizontal" Margin="0, 35, 0, 0">
            <Image HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Margin="30, 0, 0, 0" Width="50"
                   Source="images/ok.png" />
            <TextBlock Text="{lex:Loc ImageUpToDate}" Style="{StaticResource PlainText}"
                       HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10, 0, 0, 0" TextWrapping="Wrap" />
        </StackPanel>
    </StackPanel>
</UserControl>